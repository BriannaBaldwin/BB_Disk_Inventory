@model List<Borrower>
@{
    ViewBag.Title = "Borrower Manager";
}

<h1>@ViewBag.Title</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Borrower ID</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var borrower in Model)
        {
        <tr>
            <td>@borrower.BorrowerId</td>
            <td>@borrower.BorrowerLname</td>
            <td>@borrower.BorrowerFname</td>
            <td>@borrower.BorrowerPhoneNum</td>
        </tr>
        }
    </tbody>
</table>