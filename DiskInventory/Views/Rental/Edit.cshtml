@model Rental
@{
    string title = ViewBag.Action;
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="MediaId">Media</label>
        <select asp-for="MediaId" class="form-control">
            <option value="">Select a media</option>
            @foreach (Medium m in ViewBag.Media)
            {
                <option value="@m.MediaId">@m.MediaName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowerId">Borrower Last Name</label>
        <select asp-for="BorrowerId" class="form-control">
            <option value="">Select borrower name</option>
            @foreach (Borrower b in ViewBag.Borrowers)
            {
                <option value="@b.BorrowerId">@b.BorrowerLname, @b.BorrowerFname</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BorrowedDate">Borrowed Date</label>
        <input asp-for="BorrowedDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReturnedDate">Returned Date</label>
        <input asp-for="ReturnedDate" type="date" class="form-control" />
    </div>
    <input type="hidden" asp-for="RentalId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Rental" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>